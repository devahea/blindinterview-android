<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ahea.blindinterview.android.seek.resume.ResumeActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- dashboard -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="dashboard"
                    android:textColor="#ffffff"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[나의 장단점은?] 질문 동영상을 업로드하시겠습니까?"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right">
                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="동영상 올리기"
                        android:background="@drawable/ok_button"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:padding="10dp"
                        />
                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cancel_button"
                        android:text="취소"
                        android:textColor="#ffffff"
                        />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[포트폴리오2] 질문 동영상을 업로드하시겠습니까?"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right">
                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="동영상 올리기"
                        android:background="@drawable/ok_button"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:padding="10dp"
                        />
                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cancel_button"
                        android:text="취소"
                        android:textColor="#ffffff"
                        />


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


        <!-- summery -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="summery"
                    android:textColor="#ffffff"
                    android:textStyle="italic|bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TableLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_margin="5dp"
                        android:weightSum="1.0">

                        <LinearLayout android:layout_weight="0.2">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="phone"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_weight="0.7">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="000-xxxx-xxxx"
                                android:textColor="#000000"
                                android:gravity="center"/>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_margin="5dp"
                        android:weightSum="1.0">

                        <LinearLayout android:layout_weight="0.2">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="address"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_weight="0.7">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="xxxx xxxxxx xxxxxxx xxxxxx"
                                android:textColor="#000000"
                                android:gravity="center"/>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_margin="5dp"
                        android:weightSum="1.0">

                        <LinearLayout android:layout_weight="0.2">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="school"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout android:layout_weight="0.7">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="xxxx high school"
                                android:textColor="#000000"
                                android:gravity="center"/>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_margin="5dp"
                        android:weightSum="1.0">

                        <LinearLayout android:layout_weight="0.2">
                        </LinearLayout>
                        <LinearLayout android:layout_weight="0.7">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="xxxx Univ/Computer Science"
                                android:textColor="#000000"
                                android:gravity="center"/>
                        </LinearLayout>
                    </TableRow>

                </TableLayout>


            </LinearLayout>


        </LinearLayout>





        <!--  certificates -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="certificates"
                    android:textColor="#ffffff"
                    android:textStyle="italic|bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TableLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TableRow
                        android:layout_margin="5dp"
                        android:weightSum="1.0">

                        <LinearLayout android:layout_weight="0.8"
                            android:layout_width="0dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Acuired the first level of certicate"
                                android:textColor="#000000"
                                android:gravity="left"/>
                        </LinearLayout>
                        <LinearLayout android:layout_weight="0.2"
                            android:layout_width="0dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2014.07"
                                android:textColor="#000000"
                                android:gravity="right"/>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_margin="5dp"
                        android:weightSum="1.0">

                        <LinearLayout android:layout_weight="0.8"
                            android:layout_width="0dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Acuired the first level of certicate"
                                android:textColor="#000000"
                                android:gravity="left"/>
                        </LinearLayout>
                        <LinearLayout android:layout_weight="0.2"
                            android:layout_width="0dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2014.07"
                                android:textColor="#000000"
                                android:gravity="right"/>
                        </LinearLayout>
                    </TableRow>

                </TableLayout>


            </LinearLayout>


        </LinearLayout>






        <!--   skill & special achievements -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text=" skill &amp; special achievements"
                    android:textColor="#ffffff"
                    android:textStyle="italic|bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Skilled in Business English (915 point TOEIC, jan 2014)"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="italic"
                     />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Skilled in basic OA program such as MS-office"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="italic"
                     />
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Hobbies: Inline skating, swim, bowling"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="italic"
                     />


            </LinearLayout>


        </LinearLayout>


        <!--    growth background -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text=" growth background"
                    android:textColor="#ffffff"
                    android:textStyle="italic|bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="것은 거친 모래뿐일 것이다 이상의 꽃이 없으면 쓸쓸한 인간에 남는 것은 영락과 부패 뿐이다 낙원을 장식하는 천자만홍이 어디 있으며 인생을 풍부하게 하는 온갖 과실이 어디 있으랴? 이상! 우리의 청춘이 가장 많이 품고것은 거친 모래뿐일 것이다 이상의 것은 거친 모래뿐일 것이다 이상의 것은 거친 모래뿐일 것이다 이상의 "
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="italic"
                     />

            </LinearLayout>


        </LinearLayout>



        <!--    video -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="video"
                    android:textColor="#ffffff"
                    android:textStyle="italic|bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="자기소개"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="italic"
                    android:layout_marginBottom="15dp"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ann_video"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_play"/>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"></LinearLayout>

    </LinearLayout>
</ScrollView>